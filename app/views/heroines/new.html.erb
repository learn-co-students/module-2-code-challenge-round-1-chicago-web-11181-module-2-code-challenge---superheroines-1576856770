<h1>Create a New Heroine!</h1>

<% if flash[:errors] %>
  <div id="error_explanation">
    <h2><%= flash[:errors][0] %>. Please try again!</h2>
  </div>
<% end %>

<%= form_with model: @heroine do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %><br>
    <%= f.text_field :super_name %><br>

    <%= f.label :power_id %><br>
    <%= f.collection_select(:power_id, @powers, :id, :name, prompt: true) %><br>
    <br>
    <%= f.submit %>

<% end %>