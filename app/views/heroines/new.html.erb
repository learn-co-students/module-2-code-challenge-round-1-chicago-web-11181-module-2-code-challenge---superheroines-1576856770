<h1> Create a new Heroine! </h1>

<% if @errors %>
    <% @errors.each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_with model: @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <br>
    <br>
    <%= f.label :power_id %>
    <%= f.collection_select(:power_id, @powers, :id, :name) %>
    <br>
    <br>
    <%= f.submit %>
<% end %>